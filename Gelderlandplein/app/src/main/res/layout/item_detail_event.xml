<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_detail_event"
        android:layout_width="356dp"
        android:layout_height="229dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_event_geldig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Geldigheid wordt hier weergeven"
        app:layout_constraintStart_toStartOf="@+id/iv_detail_event"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_event" />

    <TextView
        android:id="@+id/tv_detail_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="De titel wordt hier weergeven"
        app:layout_constraintStart_toStartOf="@+id/tv_event_geldig"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_geldig" />

    <TextView
        android:id="@+id/tv_detail_event_beschrijving"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hier komen de details"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_event_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_event_title" />

    <TextView
        android:id="@+id/tv_detail_event_link"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:text="Hier komt de linkt"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_event_beschrijving"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_event_beschrijving" />
</androidx.constraintlayout.widget.ConstraintLayout>